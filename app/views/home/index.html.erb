<h1>Hello, Rails!</h1>
<% if flash[:error] %>
  <p class="error">
    <%= flash[:error] %>
  </p>
<% end %>

<%= form_tag(home_create_path) do %>
  <div class="field">
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>

